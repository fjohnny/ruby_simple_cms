<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %> 
    </div>
    <br />
<% end %>

<%= link_to("<< Back to Section List", sections_path, :class => "back-link") %>

<div class="sections show">
    <h2> Show Section </h2>
 
    <table summary="section detail view">

        <tr>
           <th> Name </th>
           <td> <%= @section.name %> </td>
        </tr>

        <tr>
           <th> Postion </th>
           <td> <%= @section.position %> </td>
        </tr>

        <tr>
            <th> Page </th>
            <td> <%= @section.page.name %> </td>
        </tr>

        <tr>
            <th> Content Type </th>
            <td> <%= @section.content_type %> </td>
        </tr>

        <tr>
            <th> Content </th>
            <td> <%= @section.content %> </td>
        </tr>

        <tr>
           <th> Visible </th>
           <td> <%= @section.visible ? 'Yes' : 'No' %> </td>
        </tr>

        <tr>
           <th> Created </th>
           <td> <%= @section.created_at %> </td>
        </tr>

        <tr>
           <th> Updated </th>
           <td> <%= @section.updated_at %> </td>
        </tr>
    </table>
</div>
