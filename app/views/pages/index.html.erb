<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<div class="pages index">
    <h2> Pages </h2> 

    <%= link_to("Add New Page", new_page_path, :class => "action new") %>
    <br /> <br/>
    <table class="listing" summary="Page List">
        <tr class="header">
            <th>#</th>
            <th>Page Name</th>
            <th>Subject</th>
            <th>Permalink</th>
            <th>Visible</th>
            <th>Actions</th>
        </tr>

        <% @pages.each do |page|  %>
        <tr>
            <td> <%= page.position %> </td>
            <td> <%= page.name %> </td>
            <td> <%= page.subject.name %> </td>
            <td> <%= page.permalink %> </td>
            <td class="center"> <%= page.visible ? 'Yes' : 'No' %> </td>
            <td class="actions"> 
               <%= link_to('Show', page_path(page), :class => 'action show') %>
               <%= link_to('Edit', edit_page_path(page), :class => 'action edit') %>
               <%= link_to('Delete', delete_page_path(page), :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>

    <br /> <br />
    <%= link_to('Back to Home Page', {controller:'demo', action:'index'}) %>

</div>
